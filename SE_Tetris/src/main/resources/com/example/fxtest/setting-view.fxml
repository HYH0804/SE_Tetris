<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0" spacing="10" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fxtest.SettingController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Button fx:id="resizeGameButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="게임 화면 크기 조절" />
    <Button fx:id="setKeyButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="게임 조작키 설정" />
    <Button fx:id="resetScoreButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="스코어 보드 초기화" />
    <Button fx:id="toggleColorBlindModeButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="색맹 모드 전환" />
    <Button fx:id="resetSettingsButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="설정 초기화" />
</VBox>
